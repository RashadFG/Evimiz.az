@model  ForgetPasswordViewModel
@{
    ViewData["Title"] = "Şifrəniunutmuşam";
}

<!-- forgivePassword start -->
<section id="logIn">
    <div class="container">
        <div class="row my-4">
            <div class="col-12">
                <h2>Şifrəni unutmusan?</h2>
            </div>
        </div>
        @if (TempData["ForgotPassword"] != null)
        {
            <h3>Xahiş edirik ...Emailinizə gələn əməliyyatları ardıcıllıqla edəsini...</h3>
        }
        <form enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-12 validation-error" asp-validation-summary="ModelOnly"></div>
                <div class=" col-12 ">
                    <input type="text" class="form-control my-4" placeholder="Email" asp-for="Email">
                    <div class="validation-error my-2 p-2">
                        <i class="fas fa-exclamation-triangle mr-2 d-none"></i>
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-12  order-2">
                    <input type="submit" value="Göndər" class="form-control btn btn-block green-bg  my-4">
                </div>
            </div>
        </form>

    </div>
</section>
<!-- forgivePassword end -->
