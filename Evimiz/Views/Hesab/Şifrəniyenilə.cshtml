@model ResetAndSetNewPasswordViewModel

@{
    ViewData["Title"] = "Şifrəniyenilə";
}

<!-- forgivePassword start -->
<section id="logIn">
    <div class="container">
        <div class="row my-4">
            <div class="col-12">
                <h2>Şifrəni yenilə</h2>
            </div>
        </div>
        <form  method="post">
            <div class="row">
                <div class="col-12 validation-error" asp-validation-summary="ModelOnly"></div>
                <div class=" col-12 ">
                    <input asp-for="NewPassword" class="form-control my-4" placeholder="Yeni şifrə">
                    <div class="validation-error my-2 p-2">
                        <i class="fas fa-exclamation-triangle mr-2 d-none"></i>
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                </div>
                <div class=" col-12 ">
                    <input asp-for="ConfirmNewPassword" class="form-control my-4" placeholder="Təsdiq şifrə">
                    <div class="validation-error my-2 p-2">
                        <i class="fas fa-exclamation-triangle mr-2 d-none"></i>
                        <span asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                </div>
                <div class="col-xs-12">
                    <input asp-for="UserId" type="hidden" value="@ViewBag.UserId">
                    <input asp-for="PasswordResetToken" type="hidden" value="@ViewBag.PasswordResetToken">
                </div>
                <div class="col-12  order-2">
                    <input type="submit" value="Şifrəni dəyiş" class="btn btn-block  my-4 blue-bg">
                </div>

            </div>
        </form>
    </div>
</section>
<!-- forgivePassword end -->
