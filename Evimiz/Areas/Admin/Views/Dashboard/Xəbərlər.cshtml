@model IEnumerable<News>

@{
    ViewData["Title"] = "Xəbərlər";
    var count = 1;
}

<h2>Xəbərlər</h2>

<div class="container" style="margin-top:100px;">
    <a asp-area="Admin" asp-controller="Newss" asp-action="NewsCreate" class="btn btn-block btn-primary">Yarat</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Şəkil</th>
                <th scope="col">Başlıq</th>
                <th scope="col">Tarix</th>
                <th scope="col">Muəllif</th>
                <th scope="col">Butonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var New in Model)
            {
                <tr>
                    <th scope="row">@(count++)</th>
                    <td>
                        <img src="~/Images/News/@New.ImageUrl" class="img-fluid w-50" style="height:100px;" />
                    </td>
                    <td>@New.Title</td>
                    <td>@String.Format("{0:yyyy-MM-dd}", New.PublishDate)</td>
                    <td>@New.Author</td>
                    <td>
                        <a asp-controller="Newss" asp-action="DeleteNew" asp-route-id="@New.Id" class="btn btn-danger btn-block"><i class="fas fa-trash-alt"></i></a>
                        <a asp-controller="Newss" asp-action="ViewNew" asp-route-id="@New.Id" class="btn btn-primary btn-block"><i class="far fa-eye"></i></a>
                        <a asp-controller="Newss" asp-action="UpdateNew" asp-route-id="@New.Id" class="btn btn-success btn-block"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
