<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Evimiz.az Admin</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js"></script>
    <script src="https://kit.fontawesome.com/8fa1777ed8.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Admin/fonts/maven-pro-light.css" />
    <link rel="stylesheet" href="~/Admin/fonts/maven-pro-light.css">
    <link rel="stylesheet" href="~/Admin/assets/css/style.css">
    <link rel="stylesheet" href="~/font/stylesheet.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <section id="container">
        <!--HEADER start-->
        <header class="header black-bg d-flex align-items-center justify-content-between">
            <div class="row w-100">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <h5 class="m-0">
                        <strong>Evimiz.az saytının admin panelinə xoş gəlmişsiniz</strong>
                    </h5>
                    <div class="top-menu">
                        <ul class="nav pull-right top-menu">
                            <li><a class="logout" asp-area="Admin" asp-controller="Hesab" asp-action="AdminLogOut">Hesabdan çıx</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!--HEADER end-->
        <!-- SIDEBAR section start -->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="fa fa-dashboard"></i>
                            <span>Ana səhifə</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:void(0)">
                            <i class="fas fa-toolbox"></i>
                            <span>Vəzifə</span>
                        </a>
                        <ul class="sub">
                            <li>
                                <a asp-controller="Vezife" asp-action="Siyahi">
                                    <i class="fas fa-list-ul"></i>
                                    <span>Siyahı</span>
                                </a>
                            </li>
                            <li>
                                <a asp-area="Admin" asp-controller="Vezife" asp-action="Yarat">
                                    <i class="fas fa-plus"></i>
                                    <span>Yeni vəzifə</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a  href="javascript:void(0)">
                            <i class="fas fa-users-cog"></i>
                            <span>İşçilər</span>
                        </a>
                    </li>

                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="SaytHaqqında">
                            <i class="fas fa-info-circle"></i>
                            <span>Haqqında</span>
                        </a>
                    </li>
                    <li>
                        <a  asp-area="Admin" asp-controller="Dashboard" asp-action="Xəbərlər">
                            <i class="far fa-newspaper" ></i>
                            <span>Xəbərlər</span>
                        </a>
                    </li>

                    <li>
                        <a  asp-area="Admin" asp-controller="Dashboard" asp-action="Gelenmektublar">
                            <i class="far fa-envelope"></i>
                            <span>Gələn məktublar</span>
                        </a>
                    </li>

                    <li>
                        <a  asp-area="Admin" asp-controller="DashBoard" asp-action="Istifadəçilər">
                            <i class="fas fa-users"></i>
                            <span>İstifadəçilər</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Advertisement">
                            <i class="fas fa-clipboard"></i>
                            <span>Elanlar</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <!-- SIDEBAR section end -->
        <!--MAIN CONTENT section start-->
        <section id="main-content" style="min-height:90vh;padding:100px 0px;">
            <section class="container">
                @RenderBody()
            </section>
        </section>
        <!--MAIN CONTENT section end-->
        <!--FOOTER start-->
        <footer style="background-color:#68DFF0;">
            <div class="container py-3">
                <div class="row">
                    <div class="col-8 d-flex justify-content-end align-items-center">
                        <span class="footer-copyright">2019 - Evimiz.az</span>

                    </div>
                    <div class="col-4 d-flex justify-content-end">
                        <i class="fa fa-angle-up"></i>
                    </div>
                </div>
            </div>

        </footer>
        <!--FOOTER end-->
    </section>

    @*<script src="https://kit.fontawesome.com/8fa1777ed8.js"></script>*@
    @*<script src="~/MainPageFiles/js/jQueryConnection.js"></script>*@


    @RenderSection("scripts", required: false)
    <script src="~/../../jquery/jquery-3.4.1.min.js"></script>
    <script src="~/Admin/assets/js/main.js"></script>

</body>

</html>