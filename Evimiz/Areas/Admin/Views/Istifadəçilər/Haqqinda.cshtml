        <div class="container">
            <div class="row mt-3">
                <div class="col-lg-2 col-md-4 col-12 ">
                    <div class="my-image upload-image-commment">
                        <div class="a-area"></div>
                        @if (Model.User.UserImageUrl == null)
                        {
                            <img src="~/Images/profile/empty-profile.png" alt="" class="img-fluid w-100 img-default ">
                        }
                        else
                        {
                            <img src="~/Images/profile/@Model.User.UserImageUrl" alt="" class="img-fluid w-100 img-default ">
                        }

