                        <div class="col-xl-3 col-6 ">
                            <span class="under-property">Elanların sayı(@Model.Advertisements.Count())</span>
                        </div>
                        <div class="col-xl-3 col-6 ">
                            <div class="under-property">@Model.User.NumberKeyCode.Kcode @Model.User.PhoneNumber</div>
